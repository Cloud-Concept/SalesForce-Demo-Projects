<apex:page standardController="Account" extensions="AccountSummarizeOpps" cache="false" id="Page">
<apex:includeScript value="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" />
    <style>

    </style>
    <script type="text/javascript" src="http://www.google.com/jsapi"></script>
    <script type="text/javascript">
      google.load('visualization', '1', {packages: ['corechart','table']});
    </script>
    <script type="text/javascript">
        Number.prototype.formatMoney = function(c, d, t){
            var n = this, c = isNaN(c = Math.abs(c)) ? 2 : c, d = d == undefined ? "," : d, t = t == undefined ? "." : t, s = n < 0 ? "-" : "", i = parseInt(n = Math.abs(+n || 0).toFixed(c)) + "", j = (j = i.length) > 3 ? j % 3 : 0;
            return s + (j ? i.substr(0, j) + t : "") + i.substr(j).replace(/(\d{3})(?=\d)/g, "$1" + t) + (c ? d + Math.abs(n - i).toFixed(c).slice(2) : "");
        };
    
        $j = jQuery.noConflict();
        $j(document).ready(function() {
            drawGraphs();
            
            $j('#Page\\:Block\\:Section\\:Form\\:filter').change(function(){
                drawGraphs();
            });
        
        });
        
        function drawGraphs() {
            drawOppsByStageTable();
            drawOppsByStagePieChart();
        }
        
        function drawOppsByStagePieChart() {
            var filterCriteria = $j('#Page\\:Block\\:Section\\:Form\\:filter').val();
                        
            AccountSummarizeOpps.getFilteredOpportunityDetails('{!Account.Id}', filterCriteria, function(result, event){
                var data = new google.visualization.DataTable();
                var size = 0;
                var totalAmount = 0;
                $j.each(result, function(key, value){
                    size++;        
                })
                
                data.addColumn('string', 'Stage');
                data.addColumn('number', 'Value');
                data.addColumn({type:'string',role:'tooltip'});
                data.addRows(size);
                var index = 0;        
                $j.each(result, function(key, value){
                    data.setValue(index, 0, key);
                    data.setValue(index, 1, value);
                    index++;
                })
                
                var pie = new google.visualization.PieChart(document.getElementById('oppsByStagePie'));
                pie.draw(data, {pieSliceText:'percentage', sliceVisibilityThreshold: (1/20), tooltip: {text:'percentage'}});
            
            });
            
        }
        
        function drawOppsByStageTable(){
        
            var filterCriteria = $j('#Page\\:Block\\:Section\\:Form\\:filter').val();
                        
            AccountSummarizeOpps.getFilteredOpportunityDetails('{!Account.Id}', filterCriteria, function(result, event){
                var data = new google.visualization.DataTable();
            
            
                if (event.status) {
                    data.addColumn('string', 'Stage');
                    data.addColumn('string', 'Amount');
                    data.addColumn('string', 'Percentage');  
                    
                    var size = 0;
                    var totalAmount = 0;
                    $j.each(result, function(key, value){
                        size++; 
                        totalAmount += value;           
                    })
                    
                    data.addRows(size);
                    
                    var index = 0;
                    $j.each(result, function(key, value){
                        data.setValue(index, 0, key);
                        data.setValue(index, 1, '{!CurrencySymbol}' + value.formatMoney(0, '.', ','));
                        data.setValue(index, 2, '' + Math.round((value/totalAmount) * 10000)/100 + '%');
            
                        index++;
                    });
                    var table = new google.visualization.Table(document.getElementById('oppsByStageTable'));
                    table.draw(data, {showRowNumber: false});
                    
                }
            });        
        }

    </script>
    <br />
    <div id="responseErrors" />
    <apex:pageBlock title="Opportunity Breakdown" id="Block">
        <apex:pageBlockSection columns="1" id="Section">
            <apex:form id="Form">
                <b>Filter By: </b> 
                <apex:selectList value="{!filterCriteria}" multiselect="false" size="1" id="filter">
                    <apex:selectOptions value="{!FilterCriteriaOptions}"/>  
                </apex:selectList>                 
            </apex:form>
        </apex:pageBlockSection>
        <apex:pageBlockSection id="graphsPanel">
            <apex:pageBlockSectionItem >
                <div id="oppsByStageTable" />                
            </apex:pageBlockSectionItem>
            <apex:pageBlockSectionItem >
                <div id="oppsByStagePie" />
            </apex:pageBlockSectionItem>                
        </apex:pageBlockSection>            
    </apex:pageBlock>
</apex:page>